{
  "name": "@bonfhir/test-support",
  "description": "Test helpers for Bonfhir.",
  "version": "1.0.0-alpha.9",
  "repository": "https://github.com/bonfhir/bonfhir.git",
  "license": "APACHE-2.0",
  "type": "module",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "check": "prettier --check ./**/*.ts && eslint ./**/*.ts && tsc --noEmit",
    "format": "prettier --loglevel warn --write ./**/*.ts && eslint ./**/*.ts && tsc",
    "clean": "rimraf dist/",
    "codegen": "yarn workspace @bonfhir/codegen run dev run -d \"${PWD}/../../fhir/r4b/definitions/**/*.json\" -t \"${PWD}/r4b/**/*.hbs\" --helpers \"${PWD}/template-helpers.js\" -p 'prettier --write %files%'",
    "package:create": "node package.js pack",
    "package:publish": "node package.js publish",
    "test": "jest"
  },
  "packageManager": "yarn@3.3.1",
  "devDependencies": {
    "@bonfhir/codegen": "^1.0.0-alpha.2",
    "@bonfhir/eslint-config": "^1.0.0",
    "@bonfhir/prettier-config": "^1.0.0",
    "@bonfhir/typescript-config": "^1.0.0",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/fhir": "^0.0.35",
    "@types/node": "^18.11.18",
    "@types/rimraf": "^3",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@bonfhir/core": "^1.0.0-alpha.8",
    "@ngneat/falso": "^6.3.2",
    "fast-glob": "^3.2.12",
    "fhirpath": "^3.3.1"
  },
  "prettier": "@bonfhir/prettier-config"
}
