{
  "name": "@bonfhir/codegen",
  "version": "0.0.0",
  "description": "Code generator based on FHIR definitions",
  "type": "module",
  "bin": {
    "bonfhir-codegen": "dist/index.js"
  },
  "scripts": {
    "build": "yarn clean && swc ./src -d dist",
    "check-all": "prettier --check . && eslint . && tsc --noEmit",
    "clean": "rimraf dist/",
    "dev": "ts-node --esm --swc --transpileOnly --experimental-specifier-resolution=node src/index.ts"
  },
  "packageManager": "yarn@3.3.1",
  "devDependencies": {
    "@bonfhir/eslint-config": "*",
    "@bonfhir/prettier-config": "*",
    "@bonfhir/typescript-config": "*",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@types/rimraf": "^3",
    "@types/yargs": "^17",
    "eslint": "^8.30.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1"
  },
  "prettier": "@bonfhir/prettier-config",
  "dependencies": {
    "chalk": "^5.2.0",
    "yargs": "^17.6.2"
  }
}
