{
  "name": "@bonfhir/codegen",
  "description": "Code generator based on FHIR definitions",
  "version": "0.0.0",
  "repository": "https://github.com/bonfhir/bonfhir.git",
  "license": "APACHE-2.0",
  "type": "module",
  "bin": {
    "bonfhir-codegen": "dist/index.js"
  },
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "check": "prettier --check ./src && eslint ./src && tsc --noEmit",
    "clean": "rimraf dist/",
    "dev": "ts-node --esm --swc --transpileOnly --experimental-specifier-resolution=node src/index.ts",
    "test": "jest"
  },
  "packageManager": "yarn@3.3.1",
  "files": [
    "dist/**/*",
    "!**/*.tsbuildinfo"
  ],
  "devDependencies": {
    "@bonfhir/eslint-config": "*",
    "@bonfhir/prettier-config": "*",
    "@bonfhir/typescript-config": "*",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/fhir": "^0.0.35",
    "@types/handlebars-helpers": "^0",
    "@types/jest": "^29.2.4",
    "@types/listr": "^0",
    "@types/lodash": "^4",
    "@types/node": "^18.11.18",
    "@types/rimraf": "^3",
    "@types/yargs": "^17",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "fast-glob": "^3.2.12",
    "fhirpath": "^3.3.0",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "listr": "^0.14.3",
    "lodash": "^4.17.21",
    "to-words": "^3.3.2",
    "yargs": "^17.6.2"
  },
  "prettier": "@bonfhir/prettier-config"
}
